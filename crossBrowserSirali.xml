<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="cross browser">
    <!--Driverimiz switch and case icinde oldugundan ilk olarak
    chrome a gidiyor ve oradan chrome tarayicisini calistiriyor
    bunun onune gecmek icin BASKA BIR DRIVER olusturmaliyiz
    Bu sayede XML dosyasina gore DRIVER imiz baska yerlere
    gidebilir-->
    <test name="cross browser chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes >
            <class name="crossBrowser.positiveLoginTest">
            </class>
        </classes>
    </test>
    <test name="cross browser edge">
        <parameter name="browser" value="edge"></parameter>
        <classes >
            <class name="crossBrowser.positiveLoginTest">
            </class>
        </classes>
    </test>
    <test name="cross browser opera">
        <parameter name="browser"
                   value="opera"></parameter>
        <classes >
            <class name="crossBrowser.positiveLoginTest">
            </class>
        </classes>
    </test>

</suite>